<div class="row">
  <div class="col-md-6">
    <%= form_for(@post) do |f| %>
      <% if @post.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

          <ul>
          <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title, { "data-bind" => 'value: previewTitle, valueUpdate: \'input\'' } %>
      </div>
      <div class="field">
        <%= f.label :text %><br>
        <%= f.text_area :text, { "data-bind" => 'value: previewBody, valueUpdate: \'input\'' }  %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
  <div class="col-md-6">
      <h1 data-bind="text: previewTitle"></h1>
      <div data-bind="html: previewBody"></div>
  </div>  
</div>
<script>
  var postModel = {
    previewTitle: ko.observable(gon.post.title),
    previewBody: ko.observable(gon.post.text)
  };

  ko.applyBindings(postModel);
</script>